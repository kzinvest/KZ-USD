s}).then(()=>{showMsg("‚úÖ Saque solicitado!");atualizarCarteira()})}function carregarUsuariosAdmin(){let ul=document.getElementById("adminUsersList");ul.innerHTML="";db.ref("users").once("value",snap=>{snap.forEach(s=>{let li=document.createElement("li");li.innerText=s.val().nome+" - "+s.key;ul.appendChild(li)})})}function adminAdicionarSaldo(){let t=document.getElementById("adminAddTel").value,valor=parseFloat(document.getElementById("adminAddSaldo").value);if(!t||isNaN(valor)){showMsg("‚ùå Dados incorretos!");return}db.ref("users/"+t).once("value",snap=>{let u=snap.val();if(u){u.saldo+=valor;db.ref("users/"+t).update({saldo:u.saldo}).then(()=>showMsg("‚úÖ Saldo adicionado!"));localStorage.setItem("user_"+t,JSON.stringify(u))}else showMsg("‚ùå Usu√°rio n√£o encontrado!")})}function adminRemoverUsuario(){let t=document.getElementById("adminRemoveTel").value;if(!t){showMsg("‚ùå Informe o usu√°rio!");return}db.ref("users/"+t).remove().then(()=>{showMsg("‚úÖ Usu√°rio removido!");carregarUsuariosAdmin();localStorage.removeItem("user_"+t)})}</script></body></html>
