g("‚ùå Usu√°rio n√£o encontrado!");return}if(u.pass===p){document.getElementById("auth").style.display="none";document.getElementById("home").style.display="flex";document.getElementById("mostrarTel").innerText="N√∫mero: "+t;if(t==="929928993"&&p==="Celestino5"){abrirAdmin()}atualizarCarteira()}else showMsg("‚ùå Senha incorreta!")}function abrirCarteira(){esconderTelas();document.getElementById("carteira").style.display="flex";atualizarCarteira()}function abrirInvestimentos(){esconderTelas();document.getElementById("investimentos").style.display="flex";carregarInvestimentos()}function abrirSaque(){esconderTelas();document.getElementById("saque").style.display="flex"}function abrirEquipe(){esconderTelas();document.getElementById("equipe").style.display="flex"}function abrirRecarregar(){esconderTelas();document.getElementById("recarregar").style.display="flex";atualizarBanco()}function abrirAdmin(){esconderTelas();document.getElementById("admin").style.display="flex";carregarUsuariosAdmin()}function esconderTelas(){["home","carteira","investimentos","saque","equipe","recarregar","admin"].forEach(id=>document.getElementById(id).style.display="none")}function voltarHome(){esconderTelas();document.getElementById("home").style.display="flex"}function carregarInvestimentos(){let list=document.getElementById("investList");list.innerHTML="";investimentos.forEach(i=>{let div=document.createElement("div");div.className="investimento-item";div.innerHTML=`${i.nome} ‚Üí Retorno: ${i.retorno} ${i.moeda} (${i.duracao} min) <button class='btnInvest' onclick='investir("${i.nome}","${i.valor}","${i.moeda}")'>Investir</button>`;list.appendChild(div)})}function investir(nome,valor,moeda){let t=document.getElementById("loginTel").value,u=JSON.parse(localStorage.getItem("user_"+t));if(u.saldo>=valor){u.saldo-=valor;let data=new Date(),fim=new Date(data.getTime()+10*6e4);u.invest.push({nome:nome,valor:valor,moeda:moeda,inicio:data.toLocaleString(),fim:fim.toLocaleString()});localStorage.setItem("user_"+t,JSON.stringify(u));db.ref("users/"+t).update({saldo:u.saldo,invest:u.invest}).then(()=>{showMsg("‚úÖ Investimento realizado!");atualizarCarteira()})}else showMsg("‚ùå Saldo insuficiente!")}function atualizarCarteira(){let t=document.getElementById("loginTel").value,u=JSON.parse(localStorage.getItem("user_"+t));if(!u)return;document.getElementById("saldoDisp").innerText=moedaAtual==="USDT"? (u.saldo/cambioUSDT).toFixed(2) : u.saldo;document.getElementById("saldoTotal").innerText=u.saldo;document.getElementById("ganhosEquipe").innerText=u.invest.reduce((acc,i)=>acc+i.retorno,0);document.getElementById("codigoConvite").innerText=u.convite;let ul=document.getElementById("userConviteList");ul.innerHTML="";db.ref("users").once("value",snap=>{snap.forEach(s=>{let usr=s.val();if(usr.conviteUsado===u.convite){let li=document.createElement("li");li.innerText=usr.nome;ul.appendChild(li)}})})}function mostrarHistorico(tipo){let t=document.getElementById("loginTel").value,u=JSON.parse(localStorage.getItem("user_"+t)),list=document.getElementById("historicoList");list.innerHTML="";let arr=tipo==="saque"?u.saques:u.invest;if(arr.length===0){list.innerHTML="<li>Nenhum registro</li>"}else{arr.forEach(i=>{let li=document.createElement("li");li.innerText=tipo==="saque"?`${i.valor} ${i.moeda} - ${i.data}`:`${i.nome} ‚Üí ${i.valor} ${i.moeda} (${i.inicio} ‚Üí ${i.fim})`;list.appendChild(li)})}}function atualizarBanco(){let banco=document.getElementById("escolherBanco").value,info=document.getElementById("infoBanco");if(banco==="BFA"){info.innerHTML="BFA<br>000600007086573430138<br>Manuel Joaquim Bengui"}else if(banco==="ATL"){info.innerHTML="ATL<br>005500001575452910111<br>244929928993"}else if(banco==="Paypay"){info.innerHTML="Paypay<br>929928993<br>Celestino Bengui"}else if(banco==="USDT"){info.innerHTML="USDT TRC20: TLcw4BQ5NBGCNeq8oMB3YY44g7y5kU<br>USDT ERC20: 0x4c2e5a8b6d7f0c9a123456789abcdef"}}function enviarComprovativo(){let file=document.getElementById("comprova